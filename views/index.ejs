<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->

<main id="main-section">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-inventory" class="border-shadow">
                <span class="text-gradient">New Inventory <i class="fa-solid fa-box"></i></span>
            </a>
            <a href="/add-shipment" class="border-shadow">
                <span class="text-gradient">New Shipment <i class="fa-solid fa-truck"></i></span>
            </a>
        </div>

        <!-- form handing -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>UnitPrice</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_show') %>
                </tbody>
            </table>
        </form>
    </div>
</main>

<!-- include footer -->
    <%- include('include/_footer') %>
<!-- /include footer -->
